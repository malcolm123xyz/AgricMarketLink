<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center_horizontal"
                android:contentDescription=""
                android:src="@drawable/use_icon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@+id/imageView">

                <TextView
                    android:id="@+id/fullNameTv_Nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Malcolm Asekabta (MX)"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/folio_number_Tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="13786"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.7"
                                android:gravity="center_vertical"
                                android:text="   HOMETOWN"
                                android:textColor="#000000"
                                app:drawableLeftCompat="@drawable/ic_home_black_24dp" />

                            <TextView
                                android:id="@+id/hometownTV"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.3"
                                android:textColor="@color/blue_light" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.7"
                                android:gravity="center_vertical"
                                android:text="   DISTRICT"
                                android:textColor="#000000"
                                app:drawableLeftCompat="@drawable/twon_1" />

                            <TextView
                                android:id="@+id/dis_residence_tv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="0.3"
                                android:textColor="@color/blue_light" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="0.7"
                                android:gravity="center_vertical"
                                android:text="   REGION"
                                android:textColor="#000000"
                                app:drawableLeftCompat="@drawable/region" />

                            <TextView
                                android:id="@+id/region_residence"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.3"
                                android:textColor="@color/blue_light" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.7"
                                android:gravity="center_vertical"
                                android:text="   CLASS"
                                android:textColor="#000000"
                                app:drawableLeftCompat="@drawable/classs" />

                            <TextView
                                android:id="@+id/classTV"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.3"
                                android:textColor="@color/blue_light" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.7"
                                android:gravity="center_vertical"
                                android:text="   COURSE"
                                android:textColor="#000000"
                                app:drawableLeftCompat="@drawable/course" />

                            <TextView
                                android:id="@+id/courseTV"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.3"
                                android:textColor="@color/blue_light" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textView17"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.7"
                                android:gravity="center_vertical"
                                android:text="   HOUSE"
                                android:textColor="#000000"
                                app:drawableLeftCompat="@drawable/house" />

                            <TextView
                                android:id="@+id/houseTV"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="0.3"
                                android:textColor="@color/blue_light" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.7"
                                android:gravity="center_vertical"
                                android:text="          POSITION"
                                android:textColor="#000000" />

                            <TextView
                                android:id="@+id/position1TV"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.3"
                                android:textColor="@color/blue_light" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/departed_on"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:textStyle="bold"
                            android:textColor="@color/colorAccentButtonEnd"
                            android:layout_marginTop="10dp"
                            android:text="Departed on" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/border1"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:textStyle="bold"
                                    android:textSize="20sp"
                                    android:textColor="@color/colorAccentButtonEnd"
                                    android:text="BIOGRAPHY" />

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/editBiography"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="5dp"
                                    android:padding="5dp"
                                    android:src="@drawable/edit"
                                    android:tint="@color/black" />

                            </LinearLayout>

                            <View
                                android:layout_width="300dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_height="2dp"
                                android:background="@color/black"/>

                            <TextView
                                android:id="@+id/biography"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:layout_gravity="center_horizontal"
                                android:text="BIOGRAPHY: "
                                android:textColor="@color/colorAccentButtonEnd" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginBottom="5dp"
                                android:text="-----------------------------------"
                                android:textColor="@color/black"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/border1"
                            android:orientation="vertical"
                            android:layout_gravity="center_horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:textStyle="bold"
                                    android:textSize="20sp"
                                    android:textColor="@color/colorAccentButtonEnd"
                                    android:text="TRIBUTES:" />

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/addTribute"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_marginStart="5dp"
                                    android:padding="5dp"
                                    android:src="@mipmap/add_black"
                                    android:tint="@color/black" />

                            </LinearLayout>

                            <View
                                android:layout_width="300dp"
                                android:layout_height="2dp"
                                android:background="@color/black"/>

                            <LinearLayout
                                android:id="@+id/tribute_holder"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:orientation="vertical"/>

                        </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</layout>